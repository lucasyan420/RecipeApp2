<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.PetCreationActivity">

    <TextView
        android:id="@+id/text1_TextView_PetCreationActivity"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Create Your Pet"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2_TextView_PetCreationActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Choose a Pet"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1_TextView_PetCreationActivity" />

    <TextView
        android:id="@+id/text3_TextView_PetCreationActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Name Your Pet"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pig_ImageView_PetCreationActivity" />

    <ImageView
        android:id="@+id/parrot_ImageView_PetCreationActivity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:onClick="selectedPet"
        app:layout_constraintEnd_toStartOf="@+id/dog_ImageView_PetCreationActivity"
        app:layout_constraintTop_toBottomOf="@+id/text2_TextView_PetCreationActivity"
        app:srcCompat="@drawable/parrot"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/dog_ImageView_PetCreationActivity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:onClick="selectedPet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2_TextView_PetCreationActivity"
        app:srcCompat="@drawable/dog"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/unicorn_ImageView_PetCreationActivity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:onClick="selectedPet"
        app:layout_constraintStart_toEndOf="@+id/dog_ImageView_PetCreationActivity"
        app:layout_constraintTop_toBottomOf="@+id/text2_TextView_PetCreationActivity"
        app:srcCompat="@drawable/unicorn"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/pig_ImageView_PetCreationActivity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:onClick="selectedPet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_ImageView_PetCreationActivity"
        app:srcCompat="@drawable/pig"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/hamster_ImageView_PetCreationActivity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:onClick="selectedPet"
        app:layout_constraintEnd_toStartOf="@+id/pig_ImageView_PetCreationActivity"
        app:layout_constraintTop_toBottomOf="@+id/parrot_ImageView_PetCreationActivity"
        app:srcCompat="@drawable/hamster"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/cat_ImageView_PetCreationActivity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:onClick="selectedPet"
        app:layout_constraintStart_toEndOf="@+id/pig_ImageView_PetCreationActivity"
        app:layout_constraintTop_toBottomOf="@+id/unicorn_ImageView_PetCreationActivity"
        app:srcCompat="@drawable/cat"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/name_EditText_PetCreationActivity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text3_TextView_PetCreationActivity" />

    <Button
        android:id="@+id/createPet_Button_PetCreationActivity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/yellow"
        android:onClick="changePetName"
        android:text="Create Pet"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>